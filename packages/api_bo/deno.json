{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars", "no-debugger", "no-console", "impicit-any"]
    }
  },
  "tasks": {
    "start": "deno run -A --watch=src/, src/app.ts",
    "inspect": "deno run --inspect-brk --allow-net src/app.ts"
  },
  "importMap": "./import_map.json"
}

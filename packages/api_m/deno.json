{
    "compilerOptions": {
      "allowJs": false,
      "strict": true
    },
    "lint": {
      "files": {
        "include": ["src/"]
      },
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars", "no-debugger", "no-console", "impicit-any"]
      }
    },
    "tasks": {
      "start": "deno run -A --watch=static/,routes/ src/app.ts"
    }
  }